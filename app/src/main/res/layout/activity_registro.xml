    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText6"
        android:layout_alignBottom="@+id/button8"
        android:text="Confirmar" />
</RelativeLayout>